@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<style>
    .margin {
        margin-top: 10px
    }
</style>

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" />
    </div>
    <div class="margin">
        <label>Ürün Kategorisi</label>
        @Html.DropDownListFor(m=>m.KATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.urunlist,new {@class="form-control"})
    </div>
    <div class="margin">
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" />
    </div>
    <div class="margin">
        <label>Ürün Markası</label>
        <input type="text" class="form-control" name="MARKA" />
    </div>
    <div class="margin">
        <label>Ürün Stok</label>
        <input type="text" class="form-control" name="STOK" />
    </div>
    <div class="margin">
        <button class="btn btn-info" >Ürün Ekle</button>

    </div>

</form>


