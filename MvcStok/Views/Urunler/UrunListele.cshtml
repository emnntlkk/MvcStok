@using MvcStok.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "UrunListele";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>ÜRÜN KATEGORİ</th>
        <th>FİYAT</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>@urun.URUNID</td>
                <td>@urun.URUNAD</td>
                <td>@urun.KATEGORILER.KATEGORIAD</td>
                <td>@urun.FIYAT</td>
                <td>@urun.MARKA</td>
                <td>@urun.STOK</td>
                <td><a href="/Urunler/UrunSil/@urun.URUNID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Urunler/UrunGetir/@urun.URUNID" class="btn btn-success">GÜNCELLE</a>
            </tr>
        }
    </tbody>

</table>

<a href="/Urunler/YeniUrun/" class="btn btn-primary">Yeni Ürün Ekle</a>


