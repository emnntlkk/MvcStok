@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("UrunGuncelle","Urunler",FormMethod.Post))
{
    <div class="form-group">
        <label>Ürün ID</label>
        @Html.TextBoxFor(m => m.URUNID, new { @class = "form-control" })
        <br />

        <label>Ürün Ad</label>
        @Html.TextBoxFor(m=>m.URUNAD,new {@class="form-control"})
        <br/>

        <label>Kategori Adı</label>
        @Html.DropDownListFor(m=>m.KATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.urunlist, new { @class = "form-control" })
       @* @Html.TextBoxFor(m=>m.URUNKATEGORI,new {@class="form-control"})*@

        <br/>

        <label>Ürün Fiyat</label>
        @Html.TextBoxFor(m => m.FIYAT, new {@class="form-control"})
        <br/>

        <label>Ürün Marka</label>
        @Html.TextBoxFor(m => m.MARKA, new {@class="form-control"})
        <br/>

        <label>Ürün Stok</label>
        @Html.TextBoxFor(m => m.STOK, new {@class="form-control"})
    </div>
    
        <button class="btn btn-info">Ürün Güncelle</button>
   
}


